<!DOCTYPE html>
<html>
  <head>
    <title>JobFinder</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script type="text/javascript">
      window.currentUser = {
        id: <%= current_user.id %>,
        username: "<%= current_user.username %>"
      }
    </script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
